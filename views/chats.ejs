                        <button type="submit" class="btn btn-primary m-5">Send</button>
                    </div>
                </form>
            

        </div>
    </div>







    <script type="text/javascript">
        var team_id = "<%= team_id %>"
        var ws_url = "<%= ws_url %>"
        var ws = new WebSocket(ws_url + "/ws/chat/" + team_id)

        var formEl = document.forms.message
        formEl.onsubmit = () => {
            e.preventDefault();
            var formData = new FormData(formEl);
            fetch(api_url, {
                method: 'post',
                body: formData
            })
                .then(res => {
                    if (res.status !== 200) 
                    {
                        alert("Something went wrong")
                    }
                })

        }
        
    </script>

