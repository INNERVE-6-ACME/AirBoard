  </head>
  <body>
      <center>
        <h1><%= title %></h1>
        <div class="app" style="width: 100%;">
            <div class="controls">
    
                <div class="size">
                    <label for="pen-size">Size</label>
                    <input type="range" id="pen-size" min="1" max="20"/>
                </div>

                <div class="size">
                    <label for="eraser-size">Eraser</label>
                    <input type="range" id="eraser-size" min="1" max="20"/>
                </div>
    
                <div class="color">
                    <label for="pen-color">Color</label>
                    <input type="color" id="pen-color" value="#000">
                </div>
    
                <div class="actions">
                    <button class="btn btn-outline-secondary" id="reset-canvas">Reset</button>
                    <button class="btn btn-outline-secondary" id="save_canvas_cloud">Save to Cloud</button>
                    <button class="btn btn-outline-secondary" id="save-canvas">Download</button>
                </div>
    
            </div>
            <div id="canvas-wrapper"></div>
        </div>
        <div class="container">
            <video class="input_video" width="20%" height="20%" style="display:none"></video>
            <canvas class="output_canvas" width="1280px" height="720px"></canvas>
        </div>
    </center>
    <div id="video-grid">
    </div>
</body>
