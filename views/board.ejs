    <style>
        body{
            background-color: #74EBD5;
        background-image: linear-gradient(90deg, #0077ff 0%, #91d2f0 100%);
        font-family: 'Acme', sans-serif;

        }
        #video-grid{
            display: grid;
            grid-template-columns: repeat(auto-fill,300px);
            grid-template-rows: 300px;
        }
        video{
            width:100%;
            height:100%;
            object-fit:cover;
        }
    </style>
